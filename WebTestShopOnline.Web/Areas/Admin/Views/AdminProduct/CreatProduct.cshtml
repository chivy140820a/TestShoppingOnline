@model WebTestShopOnline.BackendAPI.ProductAPI.ModelProductAPI.CreatProductAPI

@{
    ViewData["Title"] = "CreatProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>CreatProduct</h1>

<h4>CreatProductAPI</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatProduct" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastPrice" class="control-label"></label>
                <input asp-for="LastPrice" class="form-control" />
                <span asp-validation-for="LastPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThumImage" class="control-label"></label>
                <input asp-for="ThumImage" class="form-control" />
                <span asp-validation-for="ThumImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Trở về trang chủ người dùng</a>
</div>

