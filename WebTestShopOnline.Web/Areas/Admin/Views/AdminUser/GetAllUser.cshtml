@model WebTestShopOnline.Page.PagedResult<WebTestShopOnline.BackendAPI.UserAdminAPI.ModelUserAPI.ModelUser>

@{
    ViewData["Title"] = "GetAllUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Footer{
    <link href="~/lib/jqueryui/jquery-ui.theme.min.css" rel="stylesheet" />
    <script src="~/lib/jqueryui/jquery-ui.js" asp-append-version="true"></script>
    <script src="~/admin/jsRepository/findautoUseradmincontrollsers.js" asp-append-version="true"></script>
    <script src="~/admin/jsadmin/useradmincontrol.js" asp-append-version="true"></script>
}
<input type="text" id="txtKeyword" name="name" />
<button id="txtfind" class="btn btn-primary">Tìm kiếm</button>
<button class="btn btn-primary" id="txtRegisterNew">Đăng ký thành viên</button>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                UserName
            </th>
            <th>
                PhoneNumber
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <button id="txtUpdate" data-id="@item.Id" class="btn btn-primary">Chỉnh sửa</button>
                    <button id="txtDelete" data-id="@item.Id" class="btn btn-danger">Xóa</button>
                    <a href="/Role/RoleAssign/{@item.UserName}">Gán quyền</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@await Html.PartialAsync("~/Views/_ViewModalUser.cshtml");
