@model WebTestShopOnline.Page.PagedResult<WebTestShopOnline.CartToBuy.CartItem>

@{
    ViewData["Title"] = "GetAllCartUpdate";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Footer{ 
    <script src="~/JsWeb/cartupdatecontrol.js" asp-append-version="true"></script>
}
<table class="table">
    <thead>
        <tr>
            <th>
                Hình Ảnh
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Màu
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Giá tiền
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td>
                <img src="/user-content/@item.Product.PathImage" alt="Girl in a jacket" width="100" height="100">
            </td>
            <td>
                <input type="text" name="name" value="@item.Quantity" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Price)
            </td>
            <td>
                
                <button class="btn btn-danger txtDelete" data-id="@item.Product.Id" >Xóa</button>
            </td>
        </tr>
}
    </tbody>
</table>
